<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bordro Yönetim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(120deg, #e0eafc 0%, #cfdef3 100%);
            background-attachment: fixed;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .bordro-title {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(90deg, #2575fc, #6a11cb);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }
        .bordro-card {
            border-radius: 24px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
            background: rgba(255,255,255,0.97);
            border: none;
        }
        .bordro-table th, .bordro-table td {
            vertical-align: middle;
        }
        @media (max-width: 768px) {
            .bordro-title { font-size: 1.5rem; }
            .bordro-card { padding: 0.5rem; }
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="bordro-title">Bordro Yönetim</h1>
        <div class="row mb-4 justify-content-center">
            <div class="col-12 col-md-10 col-lg-9">
                <div class="alert alert-info text-center shadow-sm mb-4" style="font-size:1.1rem;">
                    Merhaba, <b><%= user.ad %> <%= user.soyad %></b>! Aşağıda işçilere bordro gönderebilir ve geçmiş gönderimlerinizi görebilirsiniz.
                </div>
                <div class="row g-3 mb-4">
                    <div class="col-12 col-md-4">
                        <div class="card text-center border-0 shadow-sm">
                            <div class="card-body">
                                <div class="fw-bold text-secondary">Toplam Bordro</div>
                                <div class="fs-3 fw-bold text-primary"><%= toplamBordro %></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card text-center border-0 shadow-sm">
                            <div class="card-body">
                                <div class="fw-bold text-secondary">Son Gönderim</div>
                                <div class="fs-5 fw-bold text-success"><%= sonGonderim %></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card text-center border-0 shadow-sm">
                            <div class="card-body">
                                <div class="fw-bold text-secondary">Bekleyen Bordro</div>
                                <div class="fs-5 fw-bold text-warning"><%= bekleyenBordro %></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="alert alert-warning mb-4 shadow-sm" style="font-size:0.98rem;">
                    <b>Bordro Yükleme Talimatı:</b> Bordro dosyalarını yükleyip ilgili işçiye gönderebilirsiniz. Gönderim sonrası işçi bordrosunu görüntüleyip indirebilir.
                </div>
                <div class="card bordro-card shadow border-0 mb-4 animate__animated animate__fadeIn">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4 text-primary">İşçi Bordro Gönderimi</h5>
                        <div class="mb-3">
                            <input type="text" id="isciArama" class="form-control form-control-lg shadow-sm" placeholder="Ad, Soyad veya TC ile işçi ara...">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0 bordro-table table-striped table-bordered rounded-3 overflow-hidden">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col">Ad Soyad</th>
                                        <th scope="col">TC No</th>
                                        <th scope="col">Bordro Gönder</th>
                                    </tr>
                                </thead>
                                <tbody id="isciTabloBody">
                                    <% if (isciler.length === 0) { %>
                                        <tr><td colspan="4" class="text-center text-muted">İşçi bulunamadı.</td></tr>
                                    <% } else { %>
                                        <% isciler.forEach(function(isci) { %>
                                            <tr id="isciRow_<%= isci.id %>" class="align-middle">
                                                <td class="fw-semibold"><%= isci.ad %> <%= isci.soyad %></td>
                                                <td class="text-secondary"><%= isci.tc %></td>
                                                <td>
                                                    <button class="btn btn-success btn-sm animate__animated animate__fadeIn" onclick="acGonderFormu(<%= isci.id %>)"><i class="fas fa-paper-plane"></i> Bordro Gönder</button>
                                                    <div id="gonderFormu_<%= isci.id %>" style="display:none; margin-top:10px;">
                                                        <form onsubmit="return gonderBordro(event, <%= isci.id %>)" enctype="multipart/form-data" class="border rounded-3 p-3 bg-light shadow-sm animate__animated animate__fadeIn">
                                                            <input type="date" class="form-control form-control-sm mb-1" id="payroll_date_<%= isci.id %>" required>
                                                            <input type="number" class="form-control form-control-sm mb-1" id="amount_<%= isci.id %>" placeholder="Tutar" required>
                                                            <input type="text" class="form-control form-control-sm mb-1" id="description_<%= isci.id %>" placeholder="Açıklama / Mesaj Notu">
                                                            <input type="file" class="form-control form-control-sm mb-1" id="pdf_<%= isci.id %>" accept="application/pdf" required>
                                                            <button type="submit" class="btn btn-primary btn-sm w-100"><i class="fas fa-upload"></i> Gönder</button>
                                                            <div class="form-text">* Sadece PDF dosyası yükleyebilirsiniz.</div>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card border-0 shadow-sm animate__animated animate__fadeIn">
                    <div class="card-body">
                        <h5 class="card-title text-info">Bordro Gönderim Geçmişi</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-striped align-middle mb-0 table-bordered rounded-3 overflow-hidden">
                                <thead class="table-info">
                                    <tr>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">İşçi</th>
                                        <th scope="col">Dönem</th>
                                        <th scope="col">Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (payrolls.length === 0) { %>
                                        <tr><td colspan="4" class="text-center text-muted">Bordro geçmişi yok.</td></tr>
                                    <% } else { %>
                                        <% payrolls.forEach(function(bordro) { 
                                            var isci = isciler.find(i => i.id === bordro.user_id); 
                                        %>
                                        <tr class="align-middle">
                                            <td><%= (bordro.created_at + '').slice(0,10) %></td>
                                            <td><%= isci ? (isci.ad + ' ' + isci.soyad) : bordro.user_id %></td>
                                            <td><%= bordro.payroll_date %></td>
                                            <td><span class="badge bg-success">Teslim Edildi</span></td>
                                        </tr>
                                        <% }); %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
    // Arama kutusu ile filtreleme
    const aramaInput = document.getElementById('isciArama');
    aramaInput.addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        document.querySelectorAll('#isciTabloBody tr').forEach(function(row) {
            const adsoyad = row.children[0].textContent.toLowerCase();
            const tc = row.children[1].textContent.toLowerCase();
            if (adsoyad.includes(filter) || tc.includes(filter)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
    // Form açma/kapama
    function acGonderFormu(isciId) {
        document.querySelectorAll('[id^="gonderFormu_"]').forEach(function(div) {
            div.style.display = 'none';
        });
        document.getElementById('gonderFormu_' + isciId).style.display = 'block';
    }
    // Bordro gönderme (PDF upload dahil)
    function gonderBordro(e, isciId) {
        e.preventDefault();
        const payroll_date = document.getElementById('payroll_date_' + isciId).value;
        const amount = document.getElementById('amount_' + isciId).value;
        const description = document.getElementById('description_' + isciId).value;
        const pdfInput = document.getElementById('pdf_' + isciId);
        if (!payroll_date || !amount || !pdfInput.files[0]) {
            alert('Lütfen tüm alanları doldurun ve PDF seçin!');
            return false;
        }
        const formData = new FormData();
        formData.append('user_id', isciId);
        formData.append('payroll_date', payroll_date);
        formData.append('amount', amount);
        formData.append('description', description);
        formData.append('pdf', pdfInput.files[0]);
        fetch('/api/payrolls', {
            method: 'POST',
            credentials: 'include',
            body: formData
        })
        .then(res => res.json())
        .then(data => {
            if (data.error) {
                alert('Bordro gönderilemedi: ' + data.error);
            } else {
                alert('Bordro başarıyla gönderildi!');
                location.reload();
            }
        });
        return false;
    }
    </script>
</body>
</html> 