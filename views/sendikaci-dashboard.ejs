<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sendikacı Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(120deg, #6a11cb, #2575fc, #43e97b 99%, #38f9d7 100%);
            background-size: 300% 300%;
            animation: gradientMove 15s ease infinite;
        }

        @keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .nav-link {
            color: #333;
            transition: all 0.3s;
        }

        .nav-link:hover {
            color: #d8363a;
            transform: translateX(5px);
        }

        .card {
            transition: all 0.3s;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: none;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 250px;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            padding-top: 1rem;
            z-index: 1000;
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar .nav-link {
            color: white;
            padding: 0.8rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(10px);
            color: #38f9d7;
        }

        .sidebar .nav-link i {
            width: 24px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover i {
            color: #38f9d7;
            transform: scale(1.2);
        }

        .main-content {
            margin-left: 250px;
            padding: 2rem;
            min-height: 100vh;
        }

        .card-body i {
            transition: all 0.3s;
        }

        .card:hover .card-body i {
            transform: scale(1.2) rotate(5deg);
        }

        .display-4 {
            font-weight: 600;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: numberPulse 2s ease-in-out infinite;
        }

        @keyframes numberPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .welcome-card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
            border: none;
            border-radius: 15px;
        }

        .welcome-card .card-title {
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Chatbot Styles */
        .chatbot-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .chatbot-toggle {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            padding: 15px 25px;
            border-radius: 30px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            transition: all 0.3s;
        }

        .chatbot-toggle:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

        .chatbot-box {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 350px;
            height: 500px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 5px 30px rgba(0,0,0,0.2);
            display: none;
            flex-direction: column;
            overflow: hidden;
        }

        .chatbot-box.active {
            display: flex;
        }

        .chatbot-header {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .chatbot-header h5 {
            margin: 0;
        }

        .close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
        }

        .chatbot-messages {
            flex-grow: 1;
            padding: 15px;
            overflow-y: auto;
        }

        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 15px;
            max-width: 80%;
        }

        .message.bot {
            background: #f0f2f5;
            margin-right: auto;
        }

        .message.user {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            margin-left: auto;
        }

        .chatbot-input {
            padding: 15px;
            border-top: 1px solid #eee;
            display: flex;
            gap: 10px;
        }

        .chatbot-input input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 20px;
            outline: none;
        }

        .chatbot-input button {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .chatbot-input button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .quick-replies {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .quick-replies button {
            background: white;
            border: 1px solid #6a11cb;
            color: #6a11cb;
            padding: 5px 15px;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .quick-replies button:hover {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            border-color: transparent;
        }

        /* Instagram benzeri gönderi kartı */
        .post-card {
            background: rgba(255,255,255,0.97);
            border-radius: 22px;
            box-shadow: 0 6px 32px 0 rgba(31,38,135,0.13);
            border: none;
            margin-bottom: 2.5rem;
            transition: box-shadow 0.3s, transform 0.3s;
            overflow: hidden;
            position: relative;
            padding: 0 0 0 0;
        }
        .post-card:hover {
            box-shadow: 0 12px 40px 0 rgba(31,38,135,0.22);
            transform: translateY(-8px) scale(1.015);
        }
        .post-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 8px;
        }
        .avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: linear-gradient(135deg, #ff6a00, #ee0979);
            color: #fff;
            font-weight: 700;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(106,17,203,0.08);
        }
        .post-meta {
            font-size: 0.98rem;
            color: #888;
        }
        .category-badge {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            color: #fff;
            border-radius: 12px;
            padding: 2px 12px;
            font-size: 0.95rem;
            margin-right: 8px;
        }
        .privacy-badge {
            background: #ffe082;
            color: #bfa100;
            border-radius: 10px;
            padding: 2px 10px;
            font-size: 0.92rem;
            margin-left: 6px;
        }
        .post-content {
            font-size: 1.22rem;
            margin-bottom: 14px;
            color: #222;
        }
        .post-media {
            margin: 0 -24px 0 -24px;
            text-align: center;
        }
        .post-media img, .post-media video {
            border-radius: 18px;
            margin-top: 10px;
            max-height: 480px;
            object-fit: contain;
            width: 100%;
            max-width: 100%;
            box-shadow: 0 2px 18px rgba(31,38,135,0.13);
            cursor: pointer;
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .post-media img:hover, .post-media video:hover {
            box-shadow: 0 8px 32px rgba(31,38,135,0.22);
            transform: scale(1.03);
        }
        .post-actions {
            display: flex;
            align-items: center;
            gap: 18px;
            margin-top: 10px;
        }
        .begen-btn, .yorum-btn {
            border-radius: 50%;
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            background: #f7f7fa;
            border: none;
            transition: background 0.2s, color 0.2s, transform 0.15s;
            box-shadow: 0 1px 4px rgba(31,38,135,0.07);
            color: #6a11cb;
            position: relative;
        }
        .begen-btn.active, .begen-btn:active {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            color: #fff;
            transform: scale(1.18);
        }
        .begen-btn:focus { outline: none; }
        .begen-count, .yorum-count {
            font-size: 1.05rem;
            margin-left: 6px;
            color: #444;
            font-weight: 600;
        }
        .yorumlar-list {
            margin-top: 10px;
            margin-bottom: 6px;
            padding-left: 6px;
        }
        .yorum-bubble {
            background: #f3f6fa;
            border-radius: 16px;
            padding: 7px 14px;
            margin-bottom: 5px;
            display: inline-block;
            font-size: 1.01rem;
            color: #333;
            box-shadow: 0 1px 3px rgba(31,38,135,0.04);
            animation: yorumFadeIn 0.5s;
        }
        @keyframes yorumFadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: none; }
        }
        .yorum-form input {
            border-radius: 18px;
            border: 1px solid #e0e0e0;
            padding-left: 16px;
        }
        .yorum-form button {
            border-radius: 18px;
            padding: 6px 18px;
            font-weight: 600;
        }
        .container.feed-container {
            max-width: 900px;
            margin: auto;
        }
        /* Lightbox modal */
        #mediaModal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0; top: 0; width: 100vw; height: 100vh;
            background: rgba(0,0,0,0.88);
            align-items: center;
            justify-content: center;
            transition: opacity 0.2s;
        }
        #mediaModal.active { display: flex; }
        #mediaModal .modal-content {
            max-width: 90vw;
            max-height: 90vh;
            border-radius: 18px;
            box-shadow: 0 8px 40px rgba(0,0,0,0.25);
            background: #222;
            padding: 0;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #mediaModal img, #mediaModal video {
            max-width: 90vw;
            max-height: 90vh;
            border-radius: 18px;
            background: #222;
        }
        #mediaModal .close-modal {
            position: absolute;
            top: 18px;
            right: 28px;
            color: #fff;
            font-size: 2.5rem;
            background: none;
            border: none;
            cursor: pointer;
            z-index: 2;
            opacity: 0.85;
            transition: opacity 0.2s;
        }
        #mediaModal .close-modal:hover { opacity: 1; }
        @media (max-width: 700px) {
            .container.feed-container { max-width: 100vw; padding: 0 2px; }
            .post-card { border-radius: 0; }
            #mediaModal .modal-content { border-radius: 0; }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="d-flex flex-column h-100">
            <div class="p-3">
                <h4 class="text-white">Sendikacı Paneli</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/sendikaci/dashboard">
                        <i class="fas fa-home"></i> Ana Sayfa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/sendikaci/grev-yonetim">
                        <i class="fas fa-gavel"></i> Grev Yönetimi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/anket-yonetim">
                        <i class="fas fa-poll"></i> Anket Yönetimi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/toplantilar">
                        <i class="fas fa-users"></i> Toplantılar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-bullhorn"></i> Eylem Planları
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-bell"></i> Duyurular
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/iletisim">
                        <i class="fas fa-envelope"></i> İletişim
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-calendar-alt"></i> Etkinlikler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/bordro-yonetim">
                        <i class="fas fa-file-invoice"></i> Bordro Yönetim
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Kapak ve Profil Alanı -->
        <div class="mb-4" style="position:relative;">
            <div style="width:100%; height:180px; border-radius:18px; background:linear-gradient(90deg,#43e97b 0%,#38f9d7 100%); background-size:cover; background-position:center; overflow:hidden; position:relative; <%= user.kapak_foto ? `background-image:url('${user.kapak_foto}')` : '' %>">
                <!-- Sağ üst buton grubu -->
                <div class="d-flex align-items-center gap-2" style="position:absolute; top:22px; right:32px; z-index:3;">
                    <!-- Bildirimler -->
                    <div class="dropdown">
                        <button class="btn btn-light shadow-sm position-relative" type="button" id="bildirimlerBtn" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius:50%; width:48px; height:48px; display:flex; align-items:center; justify-content:center; font-size:1.5rem;">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.8rem;">3</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="bildirimlerBtn" style="min-width:320px;">
                            <li><h6 class="dropdown-header">Bildirimler</h6></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-comment text-primary me-2"></i>Yeni yorum: "Çok güzel paylaşım!"</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-heart text-danger me-2"></i>Paylaşımın beğenildi</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-plus text-success me-2"></i>Yeni takipçi: Ayşe K.</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center text-primary" href="#">Tümünü Gör</a></li>
                        </ul>
                    </div>
                    <!-- Ayarlar -->
                    <a href="/ayarlar" class="btn btn-light shadow-sm" style="border-radius:50%; width:48px; height:48px; display:flex; align-items:center; justify-content:center; font-size:1.5rem;"><i class="fas fa-cog"></i></a>
                    <!-- Çıkış -->
                    <a href="/cikis" class="btn btn-light shadow-sm" style="border-radius:50%; width:48px; height:48px; display:flex; align-items:center; justify-content:center; font-size:1.5rem;"><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
            <div style="position:absolute; left:40px; bottom:-60px; z-index:2;">
                <% if (user.profil_foto) { %>
                <div style="width:120px; height:120px; border-radius:50%; background:#fff; box-shadow:0 4px 18px rgba(0,0,0,0.13); display:flex; align-items:center; justify-content:center; font-size:2.8rem; font-weight:700; color:#6a11cb; overflow:hidden; border:4px solid #fff; background-size:cover; background-position:center; background-image:url('<%= user.profil_foto %>');">
                </div>
                <% } else { %>
                <div style="width:120px; height:120px; border-radius:50%; background:linear-gradient(135deg,#ff6a00,#ee0979); color:#fff; display:flex; align-items:center; justify-content:center; font-size:2.8rem; font-weight:700; box-shadow:0 4px 18px rgba(0,0,0,0.13); border:4px solid #fff;">
                    <%= (user.ad[0] || '').toUpperCase() %><%= (user.soyad[0] || '').toUpperCase() %>
                </div>
                <% } %>
            </div>
            <div style="position:absolute; left:180px; bottom:-30px; z-index:2;">
                <div style="font-size:1.5rem; font-weight:700; color:#333;"><%= user.ad %> <%= user.soyad %></div>
                <span style="display:inline-block; margin-top:6px; padding:5px 18px; border-radius:18px; font-size:1.05rem; font-weight:600; background:linear-gradient(90deg,#43e97b,#38f9d7); color:#222;">
                    <%= user.rol === 1 ? 'İşçi' : (user.rol === 2 ? 'Sendikacı' : 'Admin') %>
                </span>
            </div>
        </div>
        <div style="height:70px;"></div>
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h4 class="card-title">Hoş Geldiniz, <%= user.ad %> <%= user.soyad %></h4>
                        <p class="card-text">TC No: <%= user.tc %></p>
                        <p class="card-text">Email: <%= user.email %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Toplam Üye</h5>
                        <p class="card-text display-4"><%= uyeSayisi %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-poll fa-3x mb-3 text-success"></i>
                        <h5 class="card-title">Aktif Anketler</h5>
                        <p class="card-text display-4"><span id="active-survey-count">0</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-bullhorn fa-3x mb-3 text-warning"></i>
                        <h5 class="card-title">Duyurular</h5>
                        <p class="card-text display-4">4</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-calendar-alt fa-3x mb-3 text-info"></i>
                        <h5 class="card-title">Etkinlikler</h5>
                        <p class="card-text display-4">6</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mb-4 feed-container">
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/paylasim-ekle" method="POST" enctype="multipart/form-data">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label">Kategori</label>
                                <select name="kategori" class="form-select" required>
                                    <option value="dilek">Dilek</option>
                                    <option value="şikayet">Şikayet</option>
                                    <option value="istek">İstek</option>
                                    <option value="görüş">Görüş</option>
                                    <option value="öneri">Öneri</option>
                                    <option value="teşekkür">Teşekkür</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Gizlilik</label>
                                <select name="gizlilik" class="form-select" id="gizlilik-select" required>
                                    <option value="herkes">Herkes</option>
                                    <option value="ozel">Kişiye Özel</option>
                                </select>
                            </div>
                            <div class="col-md-3" id="hedef-kullanici-div" style="display:none;">
                                <label class="form-label">Hedef Kişi</label>
                                <select name="hedef_kullanici_id" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <% kullanicilar.forEach(function(k) { %>
                                        <option value="<%= k.id %>"><%= k.ad %> <%= k.soyad %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">İçerik</label>
                                <textarea name="icerik" class="form-control" rows="2" required placeholder="Paylaşmak istediğiniz mesaj..."></textarea>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Fotoğraf/Video</label>
                                <input type="file" name="media" class="form-control" accept="image/*,video/*">
                                <small class="text-muted">Maksimum dosya boyutu: 10MB. Desteklenen formatlar: JPG, PNG, GIF, MP4</small>
                            </div>
                        </div>
                        <div class="mt-3 text-end">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Paylaş</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mb-4"><h5><i class="fas fa-stream"></i> Paylaşım Akışı</h5></div>
            <% if (typeof paylasimlar !== 'undefined' && paylasimlar.length > 0) { %>
                <% paylasimlar.forEach(function(p) { %>
                    <div class="post-card paylasim-card" data-paylasim-id="<%= p.id %>">
                        <div class="card-body">
                            <div class="post-header">
                                <div class="avatar"><%= (p.ad[0] || '').toUpperCase() %><%= (p.soyad[0] || '').toUpperCase() %></div>
                                <div>
                                    <span class="post-meta">@<%= p.ad %> <%= p.soyad %></span><br>
                                    <span class="post-meta"><%= p.created_at.toISOString().slice(0,16).replace('T',' ') %></span>
                                </div>
                                <span class="category-badge"><%= p.kategori %></span>
                                <% if (p.gizlilik === 'ozel') { %>
                                    <span class="privacy-badge">Gizli</span>
                                <% } %>
                                <% if (user.id === p.user_id || user.rol === 2) { %>
                                    <button class="btn btn-sm btn-danger ms-auto sil-paylasim-btn" title="Sil"><i class="fas fa-trash"></i></button>
                                <% } %>
                            </div>
                            <div class="post-content"> <%= p.icerik %> </div>
                            <% if (p.media_path) { %>
                                <div class="post-media">
                                    <% if (p.media_path.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
                                        <img src="<%= p.media_path %>" class="img-fluid post-media-img" alt="Paylaşılan görsel">
                                    <% } else if (p.media_path.match(/\.(mp4|webm|ogg)$/i)) { %>
                                        <video class="img-fluid post-media-video" controls>
                                            <source src="<%= p.media_path %>" type="video/mp4">
                                            Tarayıcınız video oynatmayı desteklemiyor.
                                        </video>
                                    <% } %>
                                </div>
                            <% } %>
                            <div class="post-actions">
                                <button class="begen-btn <%= p.liked_by_user ? 'active' : '' %>" data-liked="<%= p.liked_by_user %>">
                                    <i class="fa<%= p.liked_by_user ? 's' : 'r' %> fa-heart"></i>
                                </button>
                                <span class="begen-count" style="cursor:pointer; text-decoration:underline;" title="Beğenenleri Gör"> <%= p.begeni_count %> </span>
                                <button class="yorum-btn" disabled><i class="far fa-comment"></i></button>
                                <span class="yorum-count">0</span>
                            </div>
                            <div class="yorumlar-list mt-2"></div>
                            <form class="yorum-form mt-2 d-flex gap-2">
                                <input type="text" class="form-control form-control-sm" name="icerik" placeholder="Yorum yaz..." required maxlength="300">
                                <button type="submit" class="btn btn-sm btn-success">Gönder</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-secondary">Henüz paylaşım yok.</div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chatbot -->
    <div class="chatbot-container">
        <div class="chatbot-toggle" id="chatbotToggle">
            <i class="fas fa-comments"></i>
            <span>SENDİKACI AI</span>
        </div>
        <div class="chatbot-box" id="chatbot">
            <div class="chatbot-header">
                <h5>SENDİKACI AI</h5>
                <button class="close-btn" id="closeChatbot">&times;</button>
            </div>
            <div class="chatbot-messages" id="chatMessages">
                <div class="message bot">
                    Merhaba <%= user.ad %>! Ben SENDİKACI AI. Size nasıl yardımcı olabilirim?
                    <div class="quick-replies">
                        <button onclick="sendQuickReply('Üye İstatistikleri')">Üye İstatistikleri</button>
                        <button onclick="sendQuickReply('Anket Oluştur')">Anket Oluştur</button>
                        <button onclick="sendQuickReply('Şikayet/Öneriler')">Şikayet/Öneriler</button>
                    </div>
                </div>
            </div>
            <div class="chatbot-input">
                <input type="text" id="userInput" placeholder="Mesajınızı yazın...">
                <button onclick="sendMessage()">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Lightbox Modal -->
    <div id="mediaModal">
        <button class="close-modal" onclick="closeMediaModal()">&times;</button>
        <div class="modal-content" id="mediaModalContent"></div>
    </div>

    <!-- Beğenenler Modalı -->
    <div class="modal fade" id="begenenlerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Beğenenler</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body" id="begenenlerList"></div>
            </div>
        </div>
    </div>

    <script>
        // Chatbot fonksiyonları
        document.addEventListener('DOMContentLoaded', function() {
            const chatbotToggle = document.getElementById('chatbotToggle');
            const closeChatbot = document.getElementById('closeChatbot');
            const chatbot = document.getElementById('chatbot');
            const chatbotBox = document.querySelector('.chatbot-box');

            // Chatbot'u aç/kapat
            function toggleChatbot() {
                chatbot.classList.toggle('active');
                if (chatbot.classList.contains('active')) {
                    // Mesajları en alta kaydır
                    const messagesDiv = document.getElementById('chatMessages');
                    messagesDiv.scrollTop = messagesDiv.scrollHeight;
                }
            }

            // Toggle butonuna tıklama olayı
            chatbotToggle.addEventListener('click', function(e) {
                e.stopPropagation();
                toggleChatbot();
            });

            // Kapatma butonuna tıklama olayı
            closeChatbot.addEventListener('click', function(e) {
                e.stopPropagation();
                toggleChatbot();
            });

            // Chatbot içine tıklandığında kapanmasını engelle
            chatbotBox.addEventListener('click', function(e) {
                e.stopPropagation();
            });

            // Chatbot dışına tıklandığında kapat
            document.addEventListener('click', function(e) {
                if (chatbot.classList.contains('active') && 
                    !chatbotBox.contains(e.target) && 
                    !chatbotToggle.contains(e.target)) {
                    toggleChatbot();
                }
            });

            // Enter tuşu ile mesaj gönderme
            document.getElementById('userInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault(); // Form gönderimini engelle
                    sendMessage();
                }
            });

            // Gizlilik seçimine göre hedef kullanıcı alanını göster/gizle
            var gizlilikSelect = document.getElementById('gizlilik-select');
            var hedefDiv = document.getElementById('hedef-kullanici-div');
            gizlilikSelect.addEventListener('change', function() {
                if (this.value === 'ozel') {
                    hedefDiv.style.display = '';
                } else {
                    hedefDiv.style.display = 'none';
                }
            });
        });

        // Mesaj gönderme fonksiyonu
        function sendMessage() {
            const userInput = document.getElementById('userInput');
            const message = userInput.value.trim();
            
            if (message) {
                const chatMessages = document.getElementById('chatMessages');
                
                // Kullanıcı mesajını ekle
                const userMessageDiv = document.createElement('div');
                userMessageDiv.className = 'message user';
                userMessageDiv.textContent = message;
                chatMessages.appendChild(userMessageDiv);
                
                // Input'u temizle
                userInput.value = '';
                
                // Mesajları en alta kaydır
                chatMessages.scrollTop = chatMessages.scrollHeight;
                
                // Bot yanıtını simüle et
                setTimeout(() => {
                    const botMessageDiv = document.createElement('div');
                    botMessageDiv.className = 'message bot';
                    botMessageDiv.textContent = 'Bu özellik şu anda geliştirme aşamasındadır. En kısa sürede size yardımcı olabilmek için çalışıyoruz.';
                    chatMessages.appendChild(botMessageDiv);
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }, 1000);
            }
        }

        // Hızlı yanıt gönderme fonksiyonu
        function sendQuickReply(message) {
            const userInput = document.getElementById('userInput');
            userInput.value = message;
            sendMessage();
        }

        fetch('/api/active-survey-count')
          .then(res => res.json())
          .then(data => {
            document.getElementById('active-survey-count').innerText = data.count;
          });

        // AJAX ile beğeni ve yorum işlemleri
        function loadYorumlar(paylasimId, card) {
            fetch(`/paylasim/${paylasimId}/yorumlar`).then(r=>r.json()).then(data=>{
                const list = card.querySelector('.yorumlar-list');
                list.innerHTML = '';
                if(data.length===0) { list.innerHTML = '<div class="text-muted small">Henüz yorum yok.</div>'; }
                else {
                    data.forEach(y=>{
                        const div = document.createElement('div');
                        div.className = 'yorum-bubble d-flex align-items-center';
                        div.innerHTML = `<b>${y.ad} ${y.soyad}:</b> ${y.icerik} <span class='text-muted small ms-2'>${new Date(y.created_at).toLocaleString('tr-TR')}</span>`;
                        // Yorum beğeni butonu
                        const likeBtn = document.createElement('button');
                        likeBtn.className = 'btn btn-sm btn-light ms-2 yorum-begen-btn';
                        likeBtn.innerHTML = '<i class="far fa-heart"></i> <span class="yorum-begen-count">0</span>';
                        likeBtn.onclick = function(e){
                            e.preventDefault();
                            fetch(`/yorum/${y.id}/begen`, {method:'POST'}).then(r=>r.json()).then(data=>{
                                const icon = likeBtn.querySelector('i');
                                let count = parseInt(likeBtn.querySelector('.yorum-begen-count').innerText);
                                if(data.liked){ icon.className='fas fa-heart text-danger'; count++; likeBtn.animate([{transform:'scale(1.2)'},{transform:'scale(1)'}],{duration:250}); }
                                else { icon.className='far fa-heart'; count--; }
                                likeBtn.querySelector('.yorum-begen-count').innerText = count;
                            });
                        };
                        // Yorum beğenenleri göster
                        likeBtn.querySelector('.yorum-begen-count').onclick = function(e){
                            e.stopPropagation();
                            fetch(`/yorum/${y.id}/begenenler`).then(r=>r.json()).then(data=>{
                                let html = data.length ? data.map(u=>`${u.ad} ${u.soyad}`).join('<br>') : 'Henüz beğeni yok.';
                                document.getElementById('begenenlerList').innerHTML = html;
                                new bootstrap.Modal(document.getElementById('begenenlerModal')).show();
                            });
                        };
                        div.appendChild(likeBtn);
                        // Yorum sil butonu
                        <% /* Yorumun sahibi veya sendikacı ise sil butonu */ %>
                        if (y.user_id === <%= user.id %> || <%= user.rol %> === 2) {
                            const silBtn = document.createElement('button');
                            silBtn.className = 'btn btn-sm btn-danger ms-2';
                            silBtn.innerHTML = '<i class="fas fa-trash"></i>';
                            silBtn.onclick = function(e){
                                e.preventDefault();
                                if(confirm('Yorumu silmek istediğinize emin misiniz?')){
                                    fetch(`/yorum/${y.id}/sil`, {method:'POST'}).then(r=>r.json()).then(data=>{ if(data.success) loadYorumlar(paylasimId, card); });
                                }
                            };
                            div.appendChild(silBtn);
                        }
                        list.appendChild(div);
                        // Yorum beğeni sayısını yükle
                        fetch(`/yorum/${y.id}/begenenler`).then(r=>r.json()).then(data=>{
                            likeBtn.querySelector('.yorum-begen-count').innerText = data.length;
                        });
                    });
                }
                card.querySelector('.yorum-count').innerText = data.length;
            });
        }
        document.querySelectorAll('.paylasim-card').forEach(function(card){
            const paylasimId = card.getAttribute('data-paylasim-id');
            loadYorumlar(paylasimId, card);
            // Paylaşım silme
            const silBtn = card.querySelector('.sil-paylasim-btn');
            if(silBtn){
                silBtn.onclick = function(e){
                    e.preventDefault();
                    if(confirm('Paylaşımı silmek istediğinize emin misiniz?')){
                        fetch(`/paylasim/${paylasimId}/sil`, {method:'POST'}).then(r=>r.json()).then(data=>{ if(data.success) card.remove(); });
                    }
                };
            }
            // Beğenenleri göster
            card.querySelector('.begen-count').onclick = function(e){
                fetch(`/paylasim/${paylasimId}/begenenler`).then(r=>r.json()).then(data=>{
                    let html = data.length ? data.map(u=>`${u.ad} ${u.soyad}`).join('<br>') : 'Henüz beğeni yok.';
                    document.getElementById('begenenlerList').innerHTML = html;
                    new bootstrap.Modal(document.getElementById('begenenlerModal')).show();
                });
            };
            // Beğeni butonu
            card.querySelector('.begen-btn').onclick = function(e){
                e.preventDefault();
                fetch(`/paylasim/${paylasimId}/begen`, {method:'POST'}).then(r=>r.json()).then(data=>{
                    const btn = card.querySelector('.begen-btn');
                    const icon = btn.querySelector('i');
                    let count = parseInt(card.querySelector('.begen-count').innerText);
                    if(data.liked){ btn.classList.add('active'); icon.className='fas fa-heart'; count++; btn.animate([{transform:'scale(1.2)'},{transform:'scale(1)'}],{duration:250}); }
                    else { btn.classList.remove('active'); icon.className='far fa-heart'; count--; }
                    card.querySelector('.begen-count').innerText = count;
                });
            };
            // Yorum formu
            card.querySelector('.yorum-form').onsubmit = function(e){
                e.preventDefault();
                const input = this.querySelector('input[name=icerik]');
                const val = input.value.trim();
                if(!val) return;
                fetch(`/paylasim/${paylasimId}/yorum`, {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({icerik:val})})
                .then(r=>r.json()).then(data=>{
                    if(data.success){ input.value=''; loadYorumlar(paylasimId, card); card.querySelector('.yorumlar-list').animate([{background:'#ffe082'},{background:'transparent'}],{duration:400}); }
                });
            };
        });

        // Lightbox modal fonksiyonları
        function openMediaModal(src, type) {
            const modal = document.getElementById('mediaModal');
            const content = document.getElementById('mediaModalContent');
            content.innerHTML = '';
            if(type === 'img') {
                const img = document.createElement('img');
                img.src = src;
                img.style.maxWidth = '90vw';
                img.style.maxHeight = '90vh';
                content.appendChild(img);
            } else if(type === 'video') {
                const video = document.createElement('video');
                video.src = src;
                video.controls = true;
                video.autoplay = true;
                video.style.maxWidth = '90vw';
                video.style.maxHeight = '90vh';
                content.appendChild(video);
            }
            modal.classList.add('active');
        }
        function closeMediaModal() {
            document.getElementById('mediaModal').classList.remove('active');
        }
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.post-media-img').forEach(function(img){
                img.onclick = function(){ openMediaModal(this.src, 'img'); };
            });
            document.querySelectorAll('.post-media-video').forEach(function(vid){
                vid.onclick = function(){ openMediaModal(this.querySelector('source').src, 'video'); };
            });
            document.getElementById('mediaModal').onclick = function(e){
                if(e.target === this) closeMediaModal();
            };
        });

        // Bildirimler açılır menüsünü AJAX ile doldur
        function loadBildirimler() {
            fetch('/api/bildirimler')
                .then(r => r.json())
                .then(data => {
                    const menu = document.querySelector('#bildirimlerBtn + .dropdown-menu');
                    menu.innerHTML = '';
                    if (!data.length) {
                        menu.innerHTML = '<li><span class="dropdown-item text-muted">Hiç bildiriminiz yok.</span></li>';
                        return;
                    }
                    menu.innerHTML += '<li><h6 class="dropdown-header">Bildirimler</h6></li>';
                    data.forEach(b => {
                        let icon = b.tip === 'yorum' ? '<i class="fas fa-comment text-primary me-2"></i>' : '<i class="fas fa-heart text-danger me-2"></i>';
                        let text = b.tip === 'yorum'
                            ? `${icon}<b>${b.bildiren_ad} ${b.bildiren_soyad}</b> gönderine yorum yaptı: <span class="text-dark">"${b.yorum_icerik}"</span>`
                            : `${icon}<b>${b.bildiren_ad} ${b.bildiren_soyad}</b> gönderini beğendi.`;
                        menu.innerHTML += `<li><a class="dropdown-item bildirim-link" href="#paylasim-${b.paylasim_id}">${text}<br><small class='text-muted'>${new Date(b.tarih).toLocaleString('tr-TR')}</small></a></li>`;
                    });
                    menu.innerHTML += '<li><hr class="dropdown-divider"></li>';
                    menu.innerHTML += '<li><a class="dropdown-item text-center text-primary" href="#">Tümünü Gör</a></li>';
                });
        }
        document.getElementById('bildirimlerBtn').addEventListener('click', loadBildirimler);
        // Bildirime tıklanınca ilgili postun olduğu yere git
        // (Eğer başka bir sayfadaysa yönlendirme yapılabilir, burada anchor scroll)
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('bildirim-link')) {
                // Menü kapansın
                setTimeout(() => document.body.click(), 100);
            }
        });
    </script>
</body>
</html> 