<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üye Ol - Sendika İletişim Merkezi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(120deg, #6a11cb, #2575fc, #43e97b 99%, #38f9d7 100%);
            background-size: 200% 200%;
            animation: gradientMove 8s ease-in-out infinite;
            display: block;
            position: relative;
            overflow-x: hidden;
        }

        @keyframes gradientMove {
            0% {background-position: 0% 50%;}
            50% {background-position: 100% 50%;}
            100% {background-position: 0% 50%;}
        }

        .bg-shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.35;
            z-index: 0;
        }

        .bg-shape1 {
            width: 420px; height: 420px;
            background: #6a11cb;
            top: -120px; left: -120px;
        }

        .bg-shape2 {
            width: 320px; height: 320px;
            background: #43e97b;
            bottom: -100px; right: -100px;
        }

        .bg-shape3 {
            width: 180px; height: 180px;
            background: #2575fc;
            top: 60%; left: 60%;
        }

        .register-container {
            background: rgba(255,255,255,0.88);
            box-shadow: 0 12px 40px 0 rgba(31,38,135,0.18);
            border-radius: 32px;
            padding: 3.5rem 2.5rem 2.5rem 2.5rem;
            max-width: 520px;
            min-height: 600px;
            width: 100%;
            margin: 48px auto 48px auto;
            position: relative;
            z-index: 1;
            animation: fadeInUp 0.7s cubic-bezier(.39,.575,.56,1.000) both;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        @keyframes fadeInUp {
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .register-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .register-header i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #0099ff;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-20px); }
            60% { transform: translateY(-10px); }
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #0099ff;
            box-shadow: 0 0 0 0.25rem rgba(0, 153, 255, 0.1);
        }

        .btn-primary {
            border-radius: 10px;
            padding: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            background: #0099ff;
            border: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 153, 255, 0.3);
            background: #0088ee;
        }

        .register-footer {
            text-align: center;
            margin-top: auto;
            padding-top: 2rem;
        }

        .register-footer a {
            color: #0099ff;
            text-decoration: none;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
            position: relative;
        }

        .register-footer a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -2px;
            left: 0;
            background-color: #0099ff;
            transition: width 0.3s ease;
        }

        .register-footer a:hover::after {
            width: 100%;
        }

        .role-selector {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .role-option {
            padding: 1rem 2rem;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            flex: 1;
        }

        .role-option:hover {
            border-color: #0099ff;
            background-color: rgba(0, 153, 255, 0.05);
        }

        .role-option.selected {
            border-color: #0099ff;
            background-color: rgba(0, 153, 255, 0.1);
        }

        .role-option i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: #0099ff;
        }

        #errorMessage, #successMessage {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            text-align: center;
            animation: shake 0.5s ease;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }

        .password-toggle {
            padding: 0.5rem 0.75rem;
            color: #6c757d;
            z-index: 5;
        }

        .password-toggle:hover {
            color: #0099ff;
        }

        .password-toggle:focus {
            box-shadow: none;
        }

        .form-floating > .password-toggle {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="bg-shape bg-shape1"></div>
    <div class="bg-shape bg-shape2"></div>
    <div class="bg-shape bg-shape3"></div>

    <div class="register-container">
        <div class="register-header">
            <i class="fas fa-user-plus"></i>
            <h2>Üye Ol</h2>
            <p class="text-muted">Sendika İletişim Merkezi'ne hoş geldiniz</p>
        </div>

        <div class="role-selector">
            <div class="role-option" data-role="isci">
                <i class="fas fa-hard-hat"></i>
                <h5>İşçi</h5>
                <p class="text-muted mb-0">Sendika üyesi olarak kayıt ol</p>
            </div>
            <div class="role-option" data-role="sendikaci">
                <i class="fas fa-user-tie"></i>
                <h5>Sendikacı</h5>
                <p class="text-muted mb-0">Sendika çalışanı olarak kayıt ol</p>
            </div>
        </div>

        <div class="alert alert-danger d-none" id="errorMessage"></div>
        <div class="alert alert-success d-none" id="successMessage"></div>

        <form id="uyeOlForm">
            <input type="hidden" name="userType" id="userType" required>
            
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="tcno" name="tcno" placeholder="TC Kimlik No" required pattern="[0-9]{11}">
                <label for="tcno">TC Kimlik No</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="ad" name="ad" placeholder="Ad" required>
                <label for="ad">Ad</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="soyad" name="soyad" placeholder="Soyad" required>
                <label for="soyad">Soyad</label>
            </div>

            <div class="form-floating mb-3">
                <input type="tel" class="form-control" id="telefon" name="telefon" placeholder="Telefon" required>
                <label for="telefon">Telefon</label>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="E-posta" required>
                <label for="email">E-posta</label>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input type="password" class="form-control" id="sifre" name="sifre" placeholder="Şifre" required minlength="6">
                <label for="sifre">Şifre</label>
                <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y border-0 bg-transparent password-toggle" data-target="sifre">
                    <i class="fas fa-eye"></i>
                </button>
            </div>

            <div class="form-floating mb-4 position-relative">
                <input type="password" class="form-control" id="sifre_tekrar" name="sifre_tekrar" placeholder="Şifre Tekrar" required minlength="6">
                <label for="sifre_tekrar">Şifre Tekrar</label>
                <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y border-0 bg-transparent password-toggle" data-target="sifre_tekrar">
                    <i class="fas fa-eye"></i>
                </button>
            </div>

            <div class="alert alert-danger d-none" id="errorMessage"></div>
            <div class="alert alert-success d-none" id="successMessage"></div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-user-plus me-2"></i> Üye Ol
            </button>
        </form>

        <div class="register-footer">
            <a href="/giris/sendikaci">Sendikacı Girişi</a>
            <span class="text-muted">|</span>
            <a href="/giris/isci">İşçi Girişi</a>
            <span class="text-muted">|</span>
            <a href="/">Ana Sayfa</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleOptions = document.querySelectorAll('.role-option');
            const userTypeInput = document.getElementById('userType');
            const form = document.getElementById('uyeOlForm');
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            const passwordToggles = document.querySelectorAll('.password-toggle');

            // Şifre göster/gizle
            passwordToggles.forEach(toggle => {
                toggle.addEventListener('click', () => {
                    const targetId = toggle.dataset.target;
                    const input = document.getElementById(targetId);
                    const icon = toggle.querySelector('i');
                    
                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    }
                });
            });

            // Rol seçimi
            roleOptions.forEach(option => {
                option.addEventListener('click', () => {
                    roleOptions.forEach(o => o.classList.remove('selected'));
                    option.classList.add('selected');
                    userTypeInput.value = option.dataset.role;
                });
            });

            // Form gönderimi
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                if (!userTypeInput.value) {
                    errorMessage.textContent = 'Lütfen bir rol seçin!';
                    errorMessage.classList.remove('d-none');
                    return;
                }

                // Şifre kontrolü
                const sifre = document.getElementById('sifre').value;
                const sifreTekrar = document.getElementById('sifre_tekrar').value;

                if (sifre !== sifreTekrar) {
                    errorMessage.textContent = 'Şifreler eşleşmiyor!';
                    errorMessage.classList.remove('d-none');
                    return;
                }

                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());

                try {
                    const response = await fetch('/uye-ol', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();

                    if (response.ok) {
                        errorMessage.classList.add('d-none');
                        successMessage.textContent = result.message;
                        successMessage.classList.remove('d-none');
                        
                        // 2 saniye sonra yönlendir
                        setTimeout(() => {
                            window.location.href = result.redirect;
                        }, 2000);
                    } else {
                        errorMessage.textContent = result.error;
                        errorMessage.classList.remove('d-none');
                        successMessage.classList.add('d-none');
                    }
                } catch (error) {
                    console.error('Hata:', error);
                    errorMessage.textContent = 'Bir hata oluştu. Lütfen tekrar deneyin.';
                    errorMessage.classList.remove('d-none');
                    successMessage.classList.add('d-none');
                }
            });
        });
    </script>
</body>
</html> 