    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #d1d8ff 0%, #e6eaf7 60%, #c5d1f7 100%);
            position: relative;
            overflow-x: hidden;
        }
        body::before {
            content: '';
            position: fixed;
            top: -120px; left: -120px;
            width: 400px; height: 400px;
            background: radial-gradient(circle at 30% 30%, #6a11cb44 0%, transparent 80%);
            z-index: 0;
            animation: float1 12s ease-in-out infinite alternate;
        }
        body::after {
            content: '';
            position: fixed;
            bottom: -120px; right: -120px;
            width: 400px; height: 400px;
            background: radial-gradient(circle at 70% 70%, #2575fc44 0%, transparent 80%);
            z-index: 0;
            animation: float2 14s ease-in-out infinite alternate;
        }
        @keyframes float1 {
            0% { transform: translateY(0) scale(1); }
            100% { transform: translateY(40px) scale(1.08); }
        }
        @keyframes float2 {
            0% { transform: translateY(0) scale(1); }
            100% { transform: translateY(-40px) scale(1.05); }
        }
        .container-custom {
            max-width: 900px;
            margin: 40px auto;
            background: #fff;
            border-radius: 22px;
            box-shadow: 0 8px 40px 0 rgba(31,38,135,0.13);
            padding: 38px 18px 32px 18px;
            position: relative;
            z-index: 1;
        }
        .page-title {
            font-size: 2.3rem;
            font-weight: 800;
            color: #2575fc;
            margin-bottom: 0.5rem;
            letter-spacing: -1px;
            text-align: center;
            background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .page-desc {
            text-align: center;
            color: #555;
            font-size: 1.15rem;
            margin-bottom: 2.2rem;
        }
        .icon-circle {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 70px;
            height: 70px;
            margin: 0 auto 18px auto;
            border-radius: 50%;
            background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
            box-shadow: 0 4px 18px rgba(37,117,252,0.13);
        }
        .icon-circle i {
            color: #fff;
            font-size: 2.2rem;
        }
        .sendika-card {
            border: none;
            margin-bottom: 28px;
            border-radius: 16px;
            background: linear-gradient(120deg, #f8faff 80%, #e9f0fb 100%);
            box-shadow: 0 2px 16px 0 rgba(37,117,252,0.07);
            padding: 22px 28px 18px 28px;
            transition: box-shadow 0.3s, transform 0.2s;
            position: relative;
        }
        .sendika-card:hover {
            box-shadow: 0 8px 32px 0 rgba(37,117,252,0.13);
            transform: translateY(-3px) scale(1.02);
        }
        .sendika-title {
            color: #6a11cb;
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }
        .sendika-card p {
            margin: 2px 0 0 0;
            font-size: 1.05rem;
        }
        .sendika-card a {
            color: #2575fc;
            text-decoration: underline;
            word-break: break-all;
        }
        .map-btn {
            margin-top: 10px;
            background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 7px 18px;
            font-weight: 600;
            font-size: 1rem;
            transition: background 0.2s, box-shadow 0.2s;
            box-shadow: 0 2px 8px rgba(37,117,252,0.08);
        }
        .map-btn:hover {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
            box-shadow: 0 4px 16px rgba(37,117,252,0.13);
        }
        .map-iframe {
            width: 100%;
            height: 320px;
            border: none;
            border-radius: 12px;
            margin-top: 16px;
            box-shadow: 0 2px 12px rgba(37,117,252,0.10);
            display: none;
            animation: fadeInMap 0.5s;
        }
        @keyframes fadeInMap {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @media (max-width: 700px) {
            .container-custom { padding: 10px; }
            .sendika-card { padding: 16px 10px; }
            .page-title { font-size: 1.4rem; }
            .map-iframe { height: 200px; }
        }
    </style>
</head>
