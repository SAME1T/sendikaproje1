    <script>
        function showMap(id, btn) {
            var map = document.getElementById('map-' + id);
            
            // Eğer harita zaten açıksa
            if (map.style.display === 'block') {
                map.style.display = 'none';
                btn.textContent = 'Haritada Göster';
                return;
            }
            
            // Tüm haritaları ve butonları sıfırla
            document.querySelectorAll('.map-iframe').forEach(function(iframe) {
                iframe.style.display = 'none';
            });
            document.querySelectorAll('.map-btn').forEach(function(b) {
                b.textContent = 'Haritada Göster';
            });
            
            // Seçili haritayı göster
            map.style.display = 'block';
            btn.textContent = 'Haritayı Kapat';
            map.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    </script>
