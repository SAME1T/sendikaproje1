<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İşçi Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(120deg, #6a11cb, #2575fc, #43e97b 99%, #38f9d7 100%);
            background-size: 300% 300%;
            animation: gradientMove 15s ease infinite;
        }

        @keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .nav-link {
            color: #333;
            transition: all 0.3s;
        }

        .nav-link:hover {
            color: #d8363a;
            transform: translateX(5px);
        }

        .card {
            transition: all 0.3s;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: none;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 250px;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            padding-top: 1rem;
            z-index: 1000;
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar .nav-link {
            color: white;
            padding: 0.8rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(10px);
            color: #38f9d7;
        }

        .sidebar .nav-link i {
            width: 24px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover i {
            color: #38f9d7;
            transform: scale(1.2);
        }

        .main-content {
            margin-left: 250px;
            padding: 2rem;
            min-height: 100vh;
        }

        .card-body i {
            transition: all 0.3s;
        }

        .card:hover .card-body i {
            transform: scale(1.2) rotate(5deg);
        }

        .display-4 {
            font-weight: 600;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: numberPulse 2s ease-in-out infinite;
        }

        @keyframes numberPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .welcome-card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
            border: none;
            border-radius: 15px;
        }

        .welcome-card .card-title {
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Chatbot Styles */
        .chatbot-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .chatbot-toggle {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            padding: 15px 25px;
            border-radius: 30px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            transition: all 0.3s;
        }

        .chatbot-toggle:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

        .chatbot-box {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 350px;
            height: 500px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 5px 30px rgba(0,0,0,0.2);
            display: none;
            flex-direction: column;
            overflow: hidden;
        }

        .chatbot-box.active {
            display: flex;
        }

        .chatbot-header {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .chatbot-header h5 {
            margin: 0;
        }

        .close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
        }

        .chatbot-messages {
            flex-grow: 1;
            padding: 15px;
            overflow-y: auto;
        }

        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 15px;
            max-width: 80%;
        }

        .message.bot {
            background: #f0f2f5;
            margin-right: auto;
        }

        .message.user {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            margin-left: auto;
        }

        .chatbot-input {
            padding: 15px;
            border-top: 1px solid #eee;
            display: flex;
            gap: 10px;
        }

        .chatbot-input input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 20px;
            outline: none;
        }

        .chatbot-input button {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .chatbot-input button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .quick-replies {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .quick-replies button {
            background: white;
            border: 1px solid #6a11cb;
            color: #6a11cb;
            padding: 5px 15px;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .quick-replies button:hover {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            border-color: transparent;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <h3 class="text-white">İşçi Paneli</h3>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="/">
                    <i class="fas fa-home"></i> Ana Sayfa
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/anketler">
                    <i class="fas fa-poll"></i> Anketler
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-gavel"></i> Grev Kararları
                </a>
            </li>
                    <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-users"></i> Toplantılar
                </a>
                    </li>
                    <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-bullhorn"></i> Eylem Planları
                </a>
                    </li>
                    <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-bell"></i> Duyurular
                </a>
                    </li>
                    <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-envelope"></i> İletişim
                </a>
                    </li>
                    <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-calendar-alt"></i> Etkinlikler
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/bordrolarim">
                    <i class="fas fa-file-invoice-dollar"></i> Bordrolarım
                </a>
            </li>
            <li class="nav-item mt-auto">
                <a class="nav-link" href="/cikis">
                    <i class="fas fa-sign-out-alt"></i> Çıkış
                </a>
                    </li>
                </ul>
            </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h4 class="card-title">Hoş Geldiniz, <%= user.ad %> <%= user.soyad %></h4>
                        <p class="card-text">TC No: <%= user.tc %></p>
                        <p class="card-text">Email: <%= user.email %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-poll fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Aktif Anketler</h5>
                        <p class="card-text display-4"><span id="active-survey-count">0</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x mb-3 text-success"></i>
                        <h5 class="card-title">Toplam Üye</h5>
                        <p class="card-text display-4"><%= uyeSayisi %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-bullhorn fa-3x mb-3 text-warning"></i>
                        <h5 class="card-title">Duyurular</h5>
                        <p class="card-text display-4">5</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-calendar-alt fa-3x mb-3 text-info"></i>
                        <h5 class="card-title">Etkinlikler</h5>
                        <p class="card-text display-4">4</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chatbot -->
    <div class="chatbot-container">
        <div class="chatbot-toggle" id="chatbotToggle">
            <i class="fas fa-comments"></i>
            <span>SENDİKACI AI</span>
        </div>
        <div class="chatbot-box" id="chatbot">
            <div class="chatbot-header">
                <h5>SENDİKACI AI</h5>
                <button class="close-btn" id="closeChatbot">&times;</button>
            </div>
            <div class="chatbot-messages" id="chatMessages">
                <div class="message bot">
                    Merhaba <%= user.ad %>! Ben SENDİKACI AI. Size nasıl yardımcı olabilirim?
                    <div class="quick-replies">
                        <button onclick="sendQuickReply('Haklarım Neler?')">Haklarım Neler?</button>
                        <button onclick="sendQuickReply('Anketlere Katıl')">Anketlere Katıl</button>
                        <button onclick="sendQuickReply('Şikayet/Öneri')">Şikayet/Öneri</button>
                    </div>
                </div>
            </div>
            <div class="chatbot-input">
                <input type="text" id="userInput" placeholder="Mesajınızı yazın...">
                <button onclick="sendMessage()">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>

    <script>
        // Chatbot fonksiyonları
        document.addEventListener('DOMContentLoaded', function() {
            const chatbotToggle = document.getElementById('chatbotToggle');
            const closeChatbot = document.getElementById('closeChatbot');
            const chatbot = document.getElementById('chatbot');
            const chatbotBox = document.querySelector('.chatbot-box');

            // Chatbot'u aç/kapat
            function toggleChatbot() {
                chatbot.classList.toggle('active');
                if (chatbot.classList.contains('active')) {
                    // Mesajları en alta kaydır
                    const messagesDiv = document.getElementById('chatMessages');
                    messagesDiv.scrollTop = messagesDiv.scrollHeight;
                }
            }

            // Toggle butonuna tıklama olayı
            chatbotToggle.addEventListener('click', function(e) {
                e.stopPropagation();
                toggleChatbot();
            });

            // Kapatma butonuna tıklama olayı
            closeChatbot.addEventListener('click', function(e) {
                e.stopPropagation();
                toggleChatbot();
            });

            // Chatbot içine tıklandığında kapanmasını engelle
            chatbotBox.addEventListener('click', function(e) {
                e.stopPropagation();
            });

            // Chatbot dışına tıklandığında kapat
            document.addEventListener('click', function(e) {
                if (chatbot.classList.contains('active') && 
                    !chatbotBox.contains(e.target) && 
                    !chatbotToggle.contains(e.target)) {
                    toggleChatbot();
                }
            });

            // Enter tuşu ile mesaj gönderme
            document.getElementById('userInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault(); // Form gönderimini engelle
                    sendMessage();
                }
            });
        });

        // Mesaj gönderme fonksiyonu
        function sendMessage() {
            const userInput = document.getElementById('userInput');
            const message = userInput.value.trim();
            
            if (message) {
                const chatMessages = document.getElementById('chatMessages');
                
                // Kullanıcı mesajını ekle
                const userMessageDiv = document.createElement('div');
                userMessageDiv.className = 'message user';
                userMessageDiv.textContent = message;
                chatMessages.appendChild(userMessageDiv);
                
                // Input'u temizle
                userInput.value = '';
                
                // Mesajları en alta kaydır
                chatMessages.scrollTop = chatMessages.scrollHeight;
                
                // Bot yanıtını simüle et
                setTimeout(() => {
                    const botMessageDiv = document.createElement('div');
                    botMessageDiv.className = 'message bot';
                    botMessageDiv.textContent = 'Bu özellik şu anda geliştirme aşamasındadır. En kısa sürede size yardımcı olabilmek için çalışıyoruz.';
                    chatMessages.appendChild(botMessageDiv);
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }, 1000);
            }
        }

        // Hızlı yanıt gönderme fonksiyonu
        function sendQuickReply(message) {
            const userInput = document.getElementById('userInput');
            userInput.value = message;
            sendMessage();
        }

        fetch('/api/active-survey-count')
          .then(res => res.json())
          .then(data => {
            document.getElementById('active-survey-count').innerText = data.count;
          });
    </script>
</body>
</html> 